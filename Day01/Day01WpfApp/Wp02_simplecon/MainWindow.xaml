<Window x:Class="Wp02_simplecon.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wp02_simplecon"
        mc:Ignorable="d"
        Title="MainWindow" Height="481" Width="373">
    <StackPanel>
        <TextBlock Text="텍스트 블럭" Width="100" />
        <Label Content="라벨 컨트롤" Width="100"/>
        <TextBox Text="텍스트 박스" Width="100" />
        <PasswordBox Password="패스워드 박스" Width="100"/>
        <Slider x:Name="SldStep" Value="0" Width="100" ValueChanged="SldStep_ValueChanged" />
        <ProgressBar x:Name="Pgbstep" Value="0" Width="100" Height="15" Maximum="10"/>
        <Image Source="Resources/xaml.png" Height="64"/>
        <MediaElement x:Name="MediaPlayer" Source="Resources/1.mp4" Width="180" Height="100" LoadedBehavior="Play"/>
    </StackPanel>
</Window>
