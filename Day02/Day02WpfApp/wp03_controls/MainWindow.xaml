<Window x:Class="wp03_controls.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wp03_controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Button x:Name="BtnOK" Content="Normal" Width="80" Height="35"/>
        <ToggleButton x:Name="BtnToggle" Content="오프상태" Width="80" Height="35" />
        <CheckBox x:Name="ChkFruitStrawberry" Content="딸기"/>
        <CheckBox x:Name="ChkFruitMango" Content="망고"/>
        <RadioButton x:Name="RddMail" Content="남자"/>
        <RadioButton x:Name="RddFemail" Content="여자"/>
        <Button x:Name="BtnMedia" Width="200" Height="100">
        <MediaElement Source="1.mp4" LoadedBehavior="Play" RenderTransformOrigin="0.5,0.5" Height="66" Width="128"/>
        </Button>
        <Ellipse Width="93" Height="73" Fill="Blue" StrokeThickness="3" Stroke="Red"/>
        <Rectangle Width="50" Height="50" Fill="Black" Stroke="Blue" StrokeThickness="5"/>
        <Path Width="50" Height="30">
            <Path.Data>
                <EllipseGeometry Center="15, 15" RadiusX="15" RadiusY="15" />
            </Path.Data>
        </Path>


    </StackPanel>

</Window>
